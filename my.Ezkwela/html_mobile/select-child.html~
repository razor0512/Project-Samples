		<script type="text/javascript" >
		$(function(){
			var location = _server.serverLocation + "scripts/m/get-child.py",
				 acctID   = _sessionHandler.getAcctID(),
				 //Supposedly, naa pay sessionID.
				 subjectListRequest = $.ajax({
					url:location, data:{
						userAccountID:acctID 
					}
			});
			
			subjectListRequest.fail(function(){
				$.mobile.changePage('dialog_html/network-error.html', {transition:'flip', role:'dialog'});
			});
			
			subjectListRequest.done(function(data){
				var ul = $(data);
				$('#my-child-list').append(ul);
				ul.listview();
			});
			
			/** This is for Subject Picker Buttons **/
			$('#student-subjects-list-object li a').click(function(){
				//var subjectSectionID = $(this).attr("id");
				//alert(subjectSectionID);
				alert(":P");
			});
			
		});
		</script>
